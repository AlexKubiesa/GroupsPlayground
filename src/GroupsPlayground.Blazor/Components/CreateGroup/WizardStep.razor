<style>
    .hide {
        display: none
    }
</style>

<div class="@((Index == WizardIndex) ? "show" : "hide")">@ChildContent</div>
    

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public int Index { get; set; }

    [CascadingParameter]
    public int WizardIndex { get; set; }
}
